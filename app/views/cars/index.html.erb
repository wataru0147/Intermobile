
<%= form_tag cars_path, :method => 'get' do %>
  <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
  </p> 
<% end %>
<h1>Cars </h1>

  <% @cars.each do |car| %>
    <div class="box panel panel-default">
       <%= link_to (image_tag car.picture.url(:medium)), car%>
        <div class="panel-body">
          <h2>
           <%= car.plate_number  %>
          </h2>
       </div>
    </div>
    <% end %>
  <%= will_paginate @cars, renderer: BootstrapPagination::Rails %>