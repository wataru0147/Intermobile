<p id="notice"><%= notice %></p>

<h1>Listing Service Transactions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Started at</th>
      <th>Finished at</th>
      <th>Cars</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_transactions.each do |service_transaction| %>
      <tr>
        <td><% if service_transaction.started_at.nil? %>
            <%= "Not Yet Started/ On Queue" %>
            
            <% end %>


        </td>
        <td><% if service_transaction.finished_at.nil? %>
          <%= "Not Yet Finished/ On-going" %>
          <% end %>
        </td>
        <td><%= service_transaction.car.try(:plate_number) %></td>
        <td><%= link_to 'Show', service_transaction %></td>
        <td><%= link_to 'Edit', edit_service_transaction_path(service_transaction) %></td>
        <td><%= link_to 'Destroy', service_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

