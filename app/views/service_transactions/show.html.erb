<div class="well">
<p id="notice"><%= notice %></p>

<p>
  <strong>Started at:</strong>
  <%= @service_transaction.started_at %>
</p>

<p>
  <strong>Finished at:</strong>
  <%= @service_transaction.finished_at %>
</p>

<p>
  <strong>Cars:</strong>
  <%= @service_transaction.car.try(:plate_number) %>
</p>
</div>


<div class='well'>
<h3>Services Todo:</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Service Name</th>
      <th>Price</th>
      <th></th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <tr>
		<% @service_todos.each do |service_todo| %>
			<td><%= service_todo.service.name %>  </td>
			<td><%= service_todo.service.price %>  </td>
			
				
			<!--<td><%= link_to 'Edit', edit_service_todo_path(service_todo) %></td>-->
		        <td><%= link_to 'Destroy', service_todo, method: :delete, data: { confirm: 'Are you sure?' } %></td><br \>
		        </tr>
		<% end %>
	
	</tbody>
	</table>
<%= render 'service_todos/form' %>
</div>


<div class='well'>
<h3>Comments:</h3>
<% @comments.each do |comment| %>
	<strong><%= comment.user.email %> : </strong>
	<p>
	<%= comment.content %>
	</p>
<% end %>
<%= render 'comments/form' %>
</div>
<%= link_to 'Edit', edit_service_transaction_path(@service_transaction) %> |
<%= link_to 'Back', service_transactions_path %>
